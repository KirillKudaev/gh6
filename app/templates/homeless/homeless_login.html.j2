{% extends "base.html" %}

{%block title%}Login - Ask a Neighbor for Help{%endblock%}

{%- block style %}
<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/helpful.css') }}">

{%- endblock %}

{%block main_content%}
  <h3>Login - Ask a Neighbor for help</h3>
  <div class="row">
    <form class="col s12" action="/login/homeless" method="POST">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id="icon_prefix" type="text" name="email" class="validate">
          <label for="icon_prefix">Email</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">vpn_key</i>
          <input id="password" type="password" name="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>

      <button class="btn waves-effect neighbor-green" type="submit" name="action" href="">Submit
        <i class="material-icons right">send</i>
      </button>

      <p>
        <a class="green-text text-lighten-1" href="/register/homeless">Register</a>
      </p>
    </form>
  </div>
        

{%endblock%}