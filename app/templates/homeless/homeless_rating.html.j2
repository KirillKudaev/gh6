{% extends "base.html" %}

{%block title%}Review Care Provider{%endblock%}

{%- block style %}
<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/helpful.css') }}">

{%- endblock %}

{%block main_content%}
  <h3>Review Care Provider</h3>

  <div class="row">
    <form class="col s12" action="rateCareProvider" method="POST">

        <div class="input-field col s9">
          <i class="material-icons prefix">info</i>
          <input type="text" name="placeName">
          <label for="placeName">Name of Care Provider</label>
        </div>

        <div class="input-field col s9">
          <i class="material-icons prefix">assessment</i>
          <input id="icon_prefix" type="number" name="rating" min=0 max=100>
          <label for="icon_prefix">Rating (0 - 100)</label>
        </div>


        <form class="col s12">
          <div class="row">
            <div class="input-field col s9">
              <i class="material-icons prefix">mode_edit</i>
              <textarea id="icon_prefix2" name="description" class="materialize-textarea"></textarea>
              <label for="icon_prefix2">Description</label>
            </div>
          </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
            

    </form>
  </div>
        

{%endblock%}