{% extends "base.html" %}

{%block title%}Client Profile{%endblock%}

{%- block style %}
<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/client-profile.css') }}">

{%- endblock %}

{%block main_content%}
  <h3>Profile</h3>

  <div class="row">
      <div class="col s3">
        <img class="client-image" src="https://scontent-ort2-1.xx.fbcdn.net/v/t1.0-9/14034701_1365208783492814_7978153509346883846_n.jpg?oh=683ca2b2c425d9269388b049c5dd2ef0&oe=58A5D9F3" alt="Terry Warren"/>
        
      </div>
      <div class="col s6">
        <h3 class="client-name">Terry Warren <i class="close material-icons">new_releases</i></h3>
        Age: 31<br>
        Originally From: Atlanta<br>
        Interests: Gardening, Painting<br>
        Food Allergies<br>
      </div>
      <div class="col s3">
        <a class="waves-effect waves-light btn"><i class="material-icons left">perm_identity</i>Edit Profile</a><br><br>
        <a class="waves-effect waves-light btn"><i class="material-icons left">label_outline</i>Refer</a>
      </div>
  </div>

  <div class="row client-info">
    <div class="col s12 m12">
    VI-SPDAT Info<br>Last Updated: 10/23/2016 <i class="close material-icons">new_releases</i><br>Recently Updated
    </div>
  </div>

  <div class="row">
  <div class="col s12 m12">
    <div class="card  blue-grey lighten-4 ">
      <div class="card-content black-text">
        <span class="card-title">History of Housing</span>
        <div class="question-text">What is the total length of time you have lived on the streets or in shelters?</div>
        <div class="question-answer">2.5 years</div>

        <div class="question-text">In the past three years, how many times have you been housed and homeless again?</div>
        <div class="question-answer">2 times</div>
      </div>
    </div>
  </div>
</div>
        

{%endblock%}