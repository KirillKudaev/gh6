{% extends "base.html" %}

{%block title%}Helpful Dashboard{%endblock%}

{%- block style %}
<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/helpful.css') }}">
{%- endblock %}

{%block main_content%}
  <h3>Friendships</h3>

  <div class="row">
    {% for n in range(4) %}
    <div class="col s12 m3">
      <div class="card">
        <div class="card-image">
          <img src="https://scontent-ort2-1.xx.fbcdn.net/v/t1.0-9/14034701_1365208783492814_7978153509346883846_n.jpg?oh=683ca2b2c425d9269388b049c5dd2ef0&oe=58A5D9F3">
          <span class="card-title">Name</span>
        </div>
        <div class="card-content">
          <p>I am a very simple card. I am good at containing small bits of information.
          I am convenient because I require little markup to use effectively.</p>
        </div>
        <div class="card-action">
          <a href="#">Add as friend</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>    


  <h3>Volunteer Opportunities</h3>

  <div class="row">
    {% for n in range(3) %}
        <div class="col s12 m6">
          <div class="card  blue-grey lighten-3">
            <div class="card-content white-text">
              <span class="card-title">Card Title</span>
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <a class="blue-text text-darken-2" href="#">See more</a>
            </div>
          </div>
        </div>
    {% endfor %}
  </div>    

{%endblock%}
